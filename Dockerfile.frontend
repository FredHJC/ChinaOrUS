FROM node:20-alpine as builder

WORKDIR /app

# 安装依赖
COPY frontend/package*.json ./
RUN npm install

# 复制源代码并构建
COPY frontend/ .
RUN npm run build

# 生产环境使用 nginx 提供静态文件
FROM nginx:alpine

# 复制构建产物
COPY --from=builder /app/dist /usr/share/nginx/html

# 复制 nginx 配置
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 5173

CMD ["nginx", "-g", "daemon off;"]
